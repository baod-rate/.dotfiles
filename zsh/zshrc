# Lines configured by zsh-newuser-install
HISTFILE=~/.histfile
HISTSIZE=1000
SAVEHIST=1000
setopt autocd extendedglob
unsetopt beep
bindkey -v
# End of lines configured by zsh-newuser-install

source ~/.config/zsh/zgen/zgen.zsh

# check if there's no init script
if ! zgen saved; then
    echo "Creating a zgen save"

    zgen oh-my-zsh

    # robbyrussell's oh-my-zsh :: Productivity
    zgen oh-my-zsh plugins/colored-man-pages # colored manpages
    zgen oh-my-zsh plugins/colorize          # cat with syntax highlighting
    zgen oh-my-zsh plugins/command-not-found # suggests package name
    zgen oh-my-zsh plugins/cp                # cp with progress bar (rsync)
    zgen oh-my-zsh plugins/ssh-agent         # ssh-agent start script
    zgen oh-my-zsh plugins/vi-mode           # for those sweet shortcuts
    zgen oh-my-zsh plugins/sprunge           # pastebin alternative

    # robbyrussell's oh-my-zsh :: Build tools
    zgen oh-my-zsh plugins/git                  # git aliases
    zgen oh-my-zsh plugins/github               # cli access, url shortener

    # robbyrussell's oh-my-zsh :: Python
    zgen oh-my-zsh plugins/pip

    # bulk load
#     zgen loadall <<EOPLUGINS
#         zsh-users/zsh-history-substring-search
#         /path/to/local/plugin
# EOPLUGINS
    # ^ can't indent this EOPLUGINS

    # completions
    zgen load zsh-users/zsh-completions src

    # Misc tools
    zgen load zsh-users/zsh-syntax-highlighting
    zgen load chrissicool/zsh-256color
    zgen load djui/alias-tips
    # autosuggestions must be loaded after zsh-syntax-highlighting
    # zgen load tarruda/zsh-autosuggestions

    # theme
    # oh-my-zsh :: mrtazz blinks norm
    zgen oh-my-zsh themes/norm

    # save all to init script
    zgen save
fi

# zgen handles compinit
# autoload -U compinit
# compinit

alias ls='exa'
alias yolo='pacaur -Syuu --noconfirm'
function a(){
    AURA="$(aura "$@")"

    if echo "$AURA" | grep -q '^aura >>= .*You have to use `.*sudo.*` for that.*$'
    then
        sudo aura "$@"
    else
        echo "$AURA"
    fi
}
export BROWSER="firefox"

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
