#define font3size 12
#define font4size 12

#define font1minspace false
#define font2minspace false
#define font3minspace false
#define font4minspace false

#define font1    Hack Nerd Font Mono
#define font2    NotoEmoji Nerd Font Mono
#define font3    Fira Mono
#define font4    Noto Sans Mono CJK JP


!URxvt*letterSpace: 0

URxvt*font:           xft:font1:pixelsize=font1size:minspace=font1minspace, \
                      xft:font2:pixelsize=font2size:minspace=font2minspace, \
                      xft:font3:pixelsize=font3size:minspace=font3minspace, \
                      xft:font4:pixelsize=font4size:minspace=font4minspace
URxvt*boldFont:       xft:font1:bold:pixelsize=font1size:minspace=font1minspace, \
                      xft:font2:bold:pixelsize=font2size:minspace=font2minspace, \
                      xft:font3:bold:pixelsize=font3size:minspace=font3minspace, \
                      xft:font4:bold:pixelsize=font4size:minspace=font4minspace
URxvt*italicFont:     xft:font1:italic:pixelsize=font1size:minspace=font1minspace, \
                      xft:font2:italic:pixelsize=font2size:minspace=font2minspace, \
                      xft:font3:italic:pixelsize=font3size:minspace=font3minspace, \
                      xft:font4:italic:pixelsize=font4size:minspace=font4minspace
URxvt*boldItalicFont: xft:font1:bold:italic:pixelsize=font1size:minspace=font1minspace, \
                      xft:font2:bold:italic:pixelsize=font2size:minspace=font2minspace, \
                      xft:font3:bold:italic:pixelsize=font3size:minspace=font3minspace, \
                      xft:font4:bold:italic:pixelsize=font4size:minspace=font4minspace

URxvt.scrollBar: false
