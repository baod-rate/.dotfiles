#!/bin/zsh

PATH="${XDG_DATA_HOME:-$HOME/.local/share}/pyenv/shims:${PATH}"
PYENV_SHELL=$SHELL
command pyenv rehash 2>/dev/null
pyenv() {
  local command
  command="${1:-}"
  if [ "$#" -gt 0 ]; then
    shift
  fi

  case "$command" in
  activate|deactivate|rehash|shell)
    eval "$(pyenv "sh-$command" "$@")";;
  *)
    command pyenv "$command" "$@";;
  esac
}
