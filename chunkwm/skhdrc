# focus monitor
# cmd - p  : chunkc tiling::monitor -f prev
# cmd - n  : chunkc tiling::monitor -f next
alt - 0x21  : chunkc tiling::monitor -f 1     # [
alt - 0x1E  : chunkc tiling::monitor -f 2     # ]
# ctrl + alt - 1  : chunkc tiling::monitor -f 1
# ctrl + alt - 2  : chunkc tiling::monitor -f 2
# ctrl + alt - 3  : chunkc tiling::monitor -f 3

# send window to monitor and follow focus
alt + shift - 0x21  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1  # [
alt + shift - 0x1E  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2  # ]
# cmd + ctrl - 1  : chunkc tiling::window --send-to-monitor 1; chunkc tiling::monitor -f 1
# cmd + ctrl - 2  : chunkc tiling::window --send-to-monitor 2; chunkc tiling::monitor -f 2
# cmd + ctrl - 3  : chunkc tiling::window --send-to-monitor 3; chunkc tiling::monitor -f 3

# set insertion point for focused container
# cmd + alt - f : chunkc tiling::window --use-insertion-point cancel
