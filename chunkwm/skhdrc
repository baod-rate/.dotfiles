ctrl + shift - 9 : chunkc tiling::window --send-to-desktop 9
ctrl + shift - 0 : chunkc tiling::window --send-to-desktop 10

# send window to monitor and follow focus
alt + shift - n      : chunkc tiling::window --send-to-desktop next; chunkc tiling::desktop -f next
alt + shift - p      : chunkc tiling::window --send-to-desktop prev; chunkc tiling::desktop -f prev
ctrl + shift - right : chunkc tiling::window --send-to-desktop next; chunkc tiling::desktop -f next
ctrl + shift - left  : chunkc tiling::window --send-to-desktop prev; chunkc tiling::desktop -f prev

